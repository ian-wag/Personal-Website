<style>
  .time-date {
    position: absolute;
    top: 0;
    left: 0;
  }
  .dark-light-toggle {
    position: absolute;
    top: 0;
    right: 0;
    cursor: pointer;
    user-select: none;
  }
  .hero-subtitle {
    margin-top: 5%;
    margin-bottom: 20%;
  }
  .hero-subtitle h2 {
    font-size: clamp(1.8rem, -0.8333rem + 4.4444vw, 2.5rem);
    text-transform: lowercase;
    text-align: end;
  }

  @media only screen and (max-width: 761px) {
    .hero-subtitle h2 {
      text-align: center;
      line-height: 1.4;
      margin-top: 15%;
    }
  }
</style>
