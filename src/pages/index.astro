---
import Layout from "../layouts/Layout.astro";
import About from "../components/About.astro";
import Work from "../components/Work.astro";
---

<Layout title="Ian Wagner | Web Dev">
  <main>
    <div class="time-date">
      <div>
        &copy;{new Date().getFullYear()}
      </div>
    </div>
    <div class="hero-subtitle">
      <h2>Crafting websites that are as unique as you are</h2>
    </div>
    <About />
    <Work />
  </main>
</Layout>

<style>
  .time-date {
    position: absolute;
    top: 0;
    left: 0;
  }
  .hero-subtitle {
    margin-bottom: 20%;
  }
  .hero-subtitle h2 {
    font-size: 30px;
    font-weight: 600;
    text-align: end;
  }
</style>
