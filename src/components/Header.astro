---
import Logo from "./Logo.astro";
---

<div class="header-container">
  <div class="dark-mode-time-container">
    <div class="time-date">
      <p>
        &copy;{new Date().getFullYear()}
      </p>
    </div>
    <div class="dark-light-toggle">
      <span id="dark-light-toggle">go dark</span>
    </div>
  </div>
  <Logo />

  <nav class="grid">
    <div class="header-links-1">
      <ul>
        <li class="emoji-toggle">Web Developer</li>
        <li class="random-color">Chicago</li>
      </ul>
    </div>
    <div class="header-links-2">
      <ul>
        <li><a href="#about">About</a></li>
      </ul>
    </div>
    <div class="header-links-3">
      <ul>
        <li><a href="#work">Work</a></li>
      </ul>
    </div>
    <div class="header-links-4">
      <ul>
        <li><a href="#">Contact</a></li>
      </ul>
    </div>
    <div class="header-links-5">
      <ul>
        <li>
          <a href="https://www.linkedin.com/in/ian-wag/" target="_blank"
            >Linkedin</a
          >
        </li>
        <li><a href="https://github.com/ian-wag" target="_blank">Github</a></li>
      </ul>
    </div>
  </nav>
</div>

<style>
  .header-container {
    z-index: 100;
    width: 100%;
  }
  .logo-text {
    font-size: clamp(60px, 15vw, 200px);
  }

  .logo-img {
    color: red;
  }

  .emoji-toggle {
    cursor: pointer;
    user-select: none;
  }

  .emoji-toggle:hover {
    background-color: green;
  }

  .dark-mode-time-container {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10vh;
  }

  .dark-light-toggle {
    cursor: pointer;
    user-select: none;
  }

  li {
    text-transform: uppercase;
  }
  .grid {
    display: grid;
    grid-template-columns: repeat(8, 1fr);
    grid-template-rows: 1fr;
    grid-column-gap: 1rem;
    grid-row-gap: 0;
    width: 100%;
    transform: translateY(-2.8vw);
    padding-left: 0;
  }

  @media only screen and (max-width: 761px) {
    .grid {
      display: block;
      transform: translateY(0vw);
    }
    .header-links-1 li,
    .header-links-2 li,
    .header-links-3 li,
    .header-links-4 li,
    .header-links-5 li {
      display: flex;
      justify-content: flex-end;
    }
  }
  .header-links-1 {
    grid-area: 1/1/2/3;
  }
  .header-links-2 {
    grid-area: 1/3/1/4;
  }

  .header-links-3 {
    grid-area: 1/5/1/6;
  }
  .header-links-4 {
    grid-area: 1/7/1/8;
  }
  .header-links-5 {
    grid-area: 1/8/1/9;
  }

  .header-container a:hover {
    background-color: green;
  }
</style>
