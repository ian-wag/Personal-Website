---
export interface Props {
  imgSrc?: string;
  title?: string;
  subtitle?: string;
  agency?: string;
  tags?: string;
  projectHref?: string;
  agencyHref?: string;
}

const { imgSrc, title, subtitle, tags, projectHref, agencyHref, agency } = Astro.props;
---

<div class="work-card-wrapper">
  <a class="work-card" href={projectHref} target="_blank">
    <img class="work-card-img grayscale" src={imgSrc} alt={title} />
  </a>
  <div class="work-card-body">
    <a href={projectHref} target="_blank"><h3 class="work-card-title">{title}</h3></a>
    <a href={agencyHref} target="_blank"><h5 class="work-card-title">{agency}</h5></a>
    <h4 class="card-subtitle">{subtitle}</h4>
    <p class="work-card-tags">{tags}</p>
  </div>
</div>

<style>
  img {
    width: 100%;
    height: 100%;
  }

  img.grayscale {
    filter: grayscale(100%);
    transition: filter 0.2s ease;
  }

  img.grayscale:hover {
    filter: grayscale(0%);
  }
</style>
